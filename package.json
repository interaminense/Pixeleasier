{
 "name": "pixeleasier",
 "version": "2.0.1",
 "description": "A simple tool for creating drawings in pixels",
 "main": "src/index.js",
 "scripts": {
  "build": "webpack --config webpack.config.js --mode production",
  "dev": "webpack --config webpack.config.js --mode development --watch",
  "jest-html": "jest-html -p 8092",
  "start": "http-server . -p 8090",
  "test": "jest --coverage"
 },
 "repository": {
  "type": "git",
  "url": "git+https://github.com/interaminense/Pixeleasier.git"
 },
 "author": "Adriano Interaminense",
 "license": "MIT",
 "bugs": {
  "url": "https://github.com/interaminense/Pixeleasier/issues"
 },
 "homepage": "https://demo-pixeleasier.wedeploy.io/",
 "devDependencies": {
  "babel-core": "^6.26.3",
  "babel-eslint": "^8.2.6",
  "babel-jest": "^23.4.2",
  "babel-preset-env": "^1.7.0",
  "eslint-plugin-jest": "^21.21.0",
  "http-server": "^0.11.1",
  "jest": "^23.5.0",
  "jest-environment-jsdom": "^23.4.0",
  "jest-html": "^1.4.0",
  "webpack": "^4.16.5",
  "webpack-cli": "^3.1.0"
 },
 "transform": {
  "^.+\\.jsx?$": "babel-jest"
 },
 "jest": {
  "coverageDirectory": "build/coverage",
  "coverageThreshold": {
   "global": {
    "branches": 90,
    "functions": 90,
    "lines": 90
   },
   "snapshotSerializers": ["jest-html"]
  },
  "verbose": true,
  "testURL": "http://localhost/"
 }
}
